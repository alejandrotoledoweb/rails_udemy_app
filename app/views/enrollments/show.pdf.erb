<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" %>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
  </head>
  <body onload='number_pages' class="pdf-body">
    <main id="content">
      <%= yield %>
      <section id="header">
        <h1>
          Certificate of Achievement
        </h1>
        <%= image_tag wicked_pdf_asset_base64('rails-logo.jpg') %>
      </section>
      <section>
        <p>We Certificate that:</p>
        <p class="user-name"><%= @enrollment.user.name %></p>
        <p>
          completed the course:
        </p>
        <h2 class="pdf-course">
          <%= @enrollment.course.title %>
        </h2>
      </section>

      <section>


      <p>Certification ID: <span><%= @enrollment.id %></span></p>
      <p>Certificate url: <span><%= request.base_url %><%= request.original_fullpath %></span></p>
      <p>User: <span><%= current_user.email %></span></p>

      </section>
    </main>
  </body>
</html>
