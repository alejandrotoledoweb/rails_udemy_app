<div class="w-full mx-auto ">
  <div class="flex items-center justify-around">
    <h1 class="text-4xl font-bold">Enrollments</h1>
    <%# <%= link_to "New enrollment", new_enrollment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div class="w-full mx-auto mt-4 border-collapse lg:w-11/12">

    <%= search_form_for @q, url: @ransack_path , html: { class: "flex space-x-4" } do |f| %>
    <%= f.search_field :course_title_cont, placeholder: "Search by course title",
                                    class: "block px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-48" %>
    <%= f.search_field :review_cont, placeholder: "Search by review",
                                    class: "block px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-48" %>
    <%= f.search_field :rating_eq, placeholder: "Rating",
                                    class: "block px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-20" %>
    <%= f.search_field :price_eq, placeholder: "Price",
                                    class: "block px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-20" %>
    <%= f.submit "Search",
                 class: "px-4 py-2 text-white bg-blue-900 hover:bg-blue-800 rounded-md shadow hover:cursor-pointer" %>
  <% end %>

  <%= button_to raw("#{icon('fa-solid fa-refresh fa-md mr-2', 'font-solid')} Refresh"), @ransack_path, method: :get,class: "mt-2 px-4 py-2 text-white bg-blue-900 rounded-md shadow hover:bg-blue-800" %>
  </div>
  <div id="enrollments" class="min-w-full overflow-auto">
    <table class="w-full mx-auto mt-4 border-collapse lg:w-11/12">
      <thead class="h-16 border border-blue-500">
        <tr>
          <th class="pl-2 text-center border border-blue-500 sm:px-1">ID</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">Date</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">Course</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">Price</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">User</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">Updated</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">Rating</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1 min-w-52">Review</th>
          <th class="pl-2 text-left border border-blue-500 sm:px-1">Price</th>
          <% if action_name != "show" %>
            <th>Actions</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render @enrollments %>
      </tbody>
    </table>
    <div class="flex justify-center mt-6">
    <%== pagy_nav(@pagy) %>
  </div>
  </div>
</div>
