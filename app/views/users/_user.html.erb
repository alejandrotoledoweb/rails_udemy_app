<article class="p-4 bg-white shadow-md rounded-lg mb-4 overflow-x-auto ">
  <table class="min-w-full text-gray-800">
    <tbody>
      <tr>
        <td class="border px-4 py-2 text-lg font-medium w-80">Email:</td>
        <td class="border px-4 py-2 max-w-20">
          <%= @user.email %>
        </td>
      </tr>

      <tr>
        <td class="border px-4 py-2 text-sm text-gray-600">Joined:</td>
        <td class="border px-4 py-2 text-sm text-gray-600">
          <%= time_ago_in_words(@user.created_at) %> ago
        </td>
      </tr>

      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Sign in count:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.sign_in_count %>
        </td>
      </tr>
      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Courses created:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.courses_count %>
        </td>
      </tr>
      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Enrollments:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.enrollments_count %>
        </td>
      </tr>

      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Current sign in at:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.current_sign_in_at ? @user.current_sign_in_at.strftime("%B %d, %Y %H:%M") : "Never" %>
        </td>
      </tr>

      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Current sign in IP:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.current_sign_in_ip || "N/A" %>
        </td>
      </tr>

      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Last sign in IP:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.last_sign_in_ip || "N/A" %>
        </td>
      </tr>
      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Income:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.course_income %>
        </td>
      </tr>
      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Expenses:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.enrollment_expences %>
        </td>
      </tr>
      <tr>
        <td class="border px-4 py-2 text-sm"><strong>Balance:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <%= @user.balance %>
        </td>
      </tr>

      <tr>
        <td class="border px-4 py-2 text-sm min-w-9 max-w-36"><strong>Confirmed email:</strong></td>
        <td class="border px-4 py-2 text-sm">
          <% if @user.confirmed_at.present? && @user.confirmation_sent_at.present? %>
            <span
              class="inline-flex items-center justify-center px-2 py-1 mr-2 text-xs font-bold leading-none text-white bg-green-400 rounded-full">YES</span>
            <% else %>
              <span
                class="inline-flex items-center justify-center px-2 py-1 mr-2 text-xs font-bold leading-none text-white bg-red-400 rounded -full">NO</span>
              <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <!-- Action Buttons -->
  <div class="flex justify-end space-x-2 mt-4">
    <!-- <%= button_to "Send Test Email", send_user_email_path(@user), method: :post,
                                                                      class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> -->
    <%= button_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure?" },
                                             class: "bg-red-600 hover:bg-red-800 text-white font-bold py-2 px-4 rounded" %>
                                             <%= link_to "Back to all users", users_path, class: "bg-slate-600 hover:bg-slate-800 text-white font-bold py-2 px-4 rounded"  %>
  </div>
</article>
