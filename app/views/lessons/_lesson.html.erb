<div id="<%= dom_id lesson %>" class="">
  <%= link_to "/ Courses", courses_path, class: "text-blue-500 hover:underline"  %>
  <%= link_to "/ #{lesson.course.title}", course_path(lesson.course), class: "text-blue-500 hover:underline"  %>
  <span class="text-blue-500">/ <%= lesson.title %></span>
  <section>
    <h2 class="text-xl font-bold mt-10"> <% if lesson.viewed(current_user) == true %>
        <i class="fa-solid fa-check-square text-lime-500"></i>
      <% else %>
        <i class="fa-regular fa-square text-lime-500"></i>
      <% end %>
      <%= lesson.title.capitalize %>
    </h2>
    <p class="my-5">
      <strong class="block font-medium mb-1">Content:</strong>
      <%= lesson.content %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">Course:</strong>
      <%= lesson.course %>
    </p>
    <footer>
      <% unless lesson.prev.nil?  %>
        <button class="my-4 bg-gray-200 p-2 rounded-md hover:bg-gray-200 w-32">
          <%= link_to raw("#{icon('fa-solid fa-arrow-left mr-2', 'font-solid')} Previous"), course_lesson_url(@course, lesson.prev), class: ''  %>
        </button>
      <% end %>
      <% unless lesson.next.nil?  %>
        <button class="my-4 bg-gray-200 p-2 rounded-md hover:bg-slate-200 w-32">
          <%= link_to raw("Next #{icon('fa-solid fa-arrow-right ml-2', 'font-solid')} "), course_lesson_url(@course, lesson.next), class: ''  %>
        </button>
      <% end %>
    </footer>
    <% if action_name != "show" %>
      <%= link_to "Show this lesson", lesson, class: "rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium hover:bg-gray-300" %>
      <%= link_to "Edit this lesson", course_edit_lesson_path(lesson), class: "rounded-lg py-3 ml-2 px-5 bg-gray-200 inline-block font-medium hover:bg-gray-300" %>
      <hr class="mt-6">
    <% end %>
  </section>
</div>
