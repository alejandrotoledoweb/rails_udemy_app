<%= link_to course_lesson_path(@course, lesson), class: "font-bold hover:underline w-full border rounded-md py-2 px-2" do %>
  <% if lesson.viewed(current_user) %>
    <i class="fa-solid fa-check-square text-lime-500 ml-2"></i>
  <% else %>
    <i class="fa-regular fa-square text-lime-500 ml-2"></i>
  <% end %>
  <%= lesson.title %>
<% end %>
